<launch>
    <arg name="manager_name" default="nodelet_manager" />
    <!-- Nodelet Manager -->
    <node pkg="nodelet" type="nodelet" name="$(arg manager_name)" args="manager" output="screen" />

    <!-- Load libuvc_camera Nodelet -->
    <node pkg="nodelet" type="nodelet" name="uvc_base_camera_nodelet"
        args="load libuvc_camera/driver $(arg manager_name)" output="screen">
        <remap from="image_raw" to="/base_camera/color/image_raw" />
        <param name="vendor" value="0x046d" />
        <param name="product" value="0x085e" />
        <param name="width" value="640" />
        <param name="height" value="480" />
        <param name="video_mode" value="mjpeg" />
        <param name="frame_rate" value="30" />
    </node>
    <node pkg="nodelet" type="nodelet" name="uvc_side_camera_nodelet"
        args="load libuvc_camera/driver $(arg manager_name)" output="screen">
        <remap from="image_raw" to="/side_camera/color/image_raw" />
        <param name="vendor" value="0x1bcf" />
        <param name="product" value="0x2284" />
        <param name="width" value="640" />
        <param name="height" value="480" />
        <param name="video_mode" value="mjpeg" />
        <param name="frame_rate" value="30" />
    </node>

</launch>